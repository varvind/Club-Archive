<body>
​
    <div >
        <div class = "row">
                <a href = "/" style = "margin-top:-.3%; margin-left: 10%;"><img src = "../public/img/blueLogo.png" style = "width: 100px; height: 100px;"></a>
                <div class = "col">
                        <input placeholder="Engineering Clubs, Frats, Bagel Club" type="text" class="form-control form-control-lg" style = "margin-top:3.3%; width: 80%;" >
                </div>
                <div class = "col" >
                    <div class="dropdown">
                        
                        <img src = "../public/img/profile pic.jpg" style = "width: 50px; height: 50px; float:right; margin-right:45px; border-radius: 12%;margin-top:2.4%" class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" >
                            <a class="dropdown-item" href="/userlogout"  >Logout</a>
                        </div>
                    </div>
                </div>
                
                
        </div>
        
        
    </div>
    <div style = "height: 450px;">
        <div id="demo" class="carousel slide" data-ride="carousel">
​
            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <% for(j=1; j< club.clubImages.length; j++){ %>
                    <li data-target="#demo" data-slide-to="<%= j %> "></li>
                <% } %> 
            </ul>
          
            <!-- The slideshow -->
            <div class="carousel-inner">
              <div class="carousel-item active">
                <div style = "height: 450px; background-image: url('<%= '../' + club.clubImages[0]%>'); background-position:center; background-size: cover;"></div>
              </div>
​
              <% for(i=1; i<club.clubImages.length; i++) { %> 
                <div class="carousel-item">
                    <div style = "height: 450px; background-image: url('<%= '../' + club.clubImages[i]%>'); background-position:center; background-size: cover;"></div>
                </div>
              <% } %> 
​
            </div>
          
            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
              <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
              <span class="carousel-control-next-icon"></span>
            </a>
          
          </div>
    </div>
    <div style = "margin-top: 2%;">
        <div class = "row">
            <div class = "col-sm-3">
                
            </div>
            <div class = "col">
                <h2 style = "color:#00a8f3"> <%= club.name %> </h2>
                <h5 >Texas A&M University</h5>
                <p> <h7>About Us : </h7> <%= club.description %> </p>
​
                
            </div>
            <div class = "col-sm-3">
                <div class = "contactBox">
                    <h5>Get Involved!</h5>
                    <p>Phone Number : <%= club.phonenumber %> </p>
                    <p>Email: <%= club.email %> </p>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class = "row">
            <div class ="col">
                
            </div>
        </div>
​
    </div>
    <div>
        <div class = "row">
            
            <div class = "col-sm-3">
                
            </div>
            <div class = "col-sm-3">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3433.457769020444!2d-96.34542498502738!3d30.62105398167621!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x864683bded743f95%3A0x9dd44bc87274fcce!2sAspire%20College%20Station!5e0!3m2!1sen!2sus!4v1579404523036!5m2!1sen!2sus" width="300" height="150" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
            </div>
            <div class = "col">
                <h6 style = "text-decoration: underline;">Meeting Times</h6>
                <p>
                    <% let times = club.meeting_times %> 
                    <% for(var i =0; i < club.meeting_times.length;  i++ ){%>
                        <% let end = times.search("\r") %> 
                        <% if(end == -1){ %>
                            <%= times %>
                            <% break; %>  
                        <% ;} %> 
                        <%= times.substring(0,end) %> 
                        <br>
                        <% times = times.substring(end+1) %> 
                        <% i = end+1 %> 
                    <%}%>
                </p>
            </div>
        </div>
    </div>
    <div>
        <div class ="row">
            <div class = "col-sm-3">
​
            </div>
            <div class = "col">
                <h6>Org President: <%= club.president_organizer %> </h7> <br>
                <h6>Member Count: <%= club.memberCount %> </h7>
                <br>
                <h6>Recruiting Season: Fall</h7>
            </div>
        </div>
    </div>

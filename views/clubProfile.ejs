<body>

    <div >
        <div class ="container">
            <div class = "row">
                    <div class ="col-sm-2">
                        <a href = "/"><img src = "../public/img/blueLogo.png" style = "width: 100px; height: 100px; "></a>
                    </div>
                    
                    <div class = "col">
                        <form class="example" action="/search" style="margin:auto" method="GET">
                            <input style ="margin-top:24px; height:50px;" placeholder="Engineering Clubs, Frats, Bagel Club" type="text" class="form-control form-control-lg" name = "search2" >
                        </form>
                            
                    </div>
                    <div class = "col" >
                        <% if (!loggedIn) {%>
                            <button type="button" class="btn btn-outline-dark" style = "font-size:18; float: right; margin-top:24px ; margin-right: 2% ; color:white; background-color: #38a8f3; height:50px;width: 85px" onclick= "window.location.href = '/signup';">Sign Up</button>
                            <button type="button" class="btn btn-outline-dark signUp"  style = "font-size:18; float : right; margin-top: 24px; margin-right: 2%;height:50px; width: 85px" onclick= "window.location.href = '/login';">Log in</button>
                        <% } %> 
                        <% if(loggedIn) { %>
                            <div class="dropdown">
                        
                                <img src = "../image/<%=user.image %>" style = "width: 50px; height: 50px; float:right; margin-right:45px; border-radius: 10%;margin-top:22px;object-fit: cover;" class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="/userprofile">View Profile</a>
                                    <a class="dropdown-item" href="/usersettings">User Settings</a>
                                    <a class="dropdown-item" href="/userlogout">Logout</a>
                                </div>
                            </div>
    
                        <% } %>
                    </div>
    
            </div>
        </div>
        
        
    </div>
    <div style = "height: 450px;background-image: url('../image/<%=club.image%>');background-position:center;background-size:cover">
        

            
    </div>
    <div style = "margin-top: 2%;">
        <div class = "container">
            <div class = "row">
                <div class = "col-sm-2">
                
                    
                    
                </div>
                <div class = "col">
                    <h2 style = "color:#00a8f3"> <%= club.name %> 
                        <% if(canEdit){ %><a href = "/clubSettings/<%=club._id%>" ><img src = "../public/img/settings icon.png" style = "width: 22px;"></a><% } %>
                        <% if(club.club_archive_approved){ %><img src = "../public/img/GoldLogo.png" style = "width: 47px;"> <%}%>
                    </h2>  
                    <h5 >Texas A&M University</h5>
                    <p> <h7>About Us : </h7> <%= club.description %> </p>
    
                    
                </div>
                <div class = "col-sm-3">
                    <div class = "contactBox">
                        <h5>Get Involved!</h5>
                        <p>Phone Number : <%= club.phonenumber %> </p>
                        <p>Email: <%= club.email %> </p>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <div>
        <div class = "container">
            <div class = "row">
                <div class ="col">
                    
                </div>
            </div>
        </div>
        

    </div>
    <div>
        <div class = "container">
            <div class = "row">
                
                <div class = "col-sm-2">
                    
                </div>
                <div class = "col-sm-5">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3433.457769020444!2d-96.34542498502738!3d30.62105398167621!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x864683bded743f95%3A0x9dd44bc87274fcce!2sAspire%20College%20Station!5e0!3m2!1sen!2sus!4v1579404523036!5m2!1sen!2sus" width="300" height="150" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
                </div>
                <div class = "col">
                    <h6 style = "text-decoration: underline;">Meeting Times</h6>
                    <p>
                        <% let times = club.meeting_times %> 
                        <% for(var i =0; i < club.meeting_times.length;  i++ ){%>
                            <% let end = times.search("\r") %> 
                            <% if(end == -1){ %>
                                <%= times %>
                                <% break; %>  
                            <% ;} %> 
                            <%= times.substring(0,end) %> 
                            <br>
                            <% times = times.substring(end+1) %> 
                            <% i = end+1 %> 
                        <%}%>
                    </p>
                </div>
                <div class = "col">
                    <% if(loggedIn) { %> 
                        <button type="button" class="btn btn-info" onclick = "window.location.href = '/adminregistration/<%=club._id%>'">Want to be an adminstrator for this club?</button>
                        <br><br>
                        <% if(club.onlineApplication.allow && !alreadyAppliedMember){ %>
                            <button type="button" class="btn btn-info" onclick = "window.location.href = '/<%=club._id%>/applyonline'">Apply to become a member of  <%= club.name %> </button>
                        <% } %> 
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class = "container">
            <div class ="row">
                <div class = "col-sm-2">
    
                </div>
                <div class = "col">
                    <h6>Org President: <%= club.president_organizer %> </h7> <br>
                    <h6>Member Count: <%= club.memberCount %> </h7>
                    <br>
                    <h6>Recruiting Season: <%=club.registration_season%></h7>
                </div>
            </div>
        </div>
        
    </div>
    <br>
    <br>
    <br>

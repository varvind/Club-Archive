<!DOCTYPE html>



<html>

    <head>
        <meta charset="utf-8">
        <!-- <meta name="viewport" content="width=device-width, initial-scale=1"> -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <link rel="icon" href="../public/img/finalLogo2.png">
        <title>ClubArchive</title>
        <style>
            .btn-outline-secondary:hover {
                background-color: lightgray
            }
            .SmallSignUp {
                color: blue;
                font-size: 100%;
                margin-left : 70%;
            }
            .SmallSignUp:visited {
                color:blue;
            }
            
            .vertical-menu {
                width: 200px; /* Set a width if you like */
            }

            .vertical-menu a {
                background-color: #eee; /* Grey background color */
                color: black; /* Black text color */
                display: block; /* Make the links appear below each other */
                padding: 12px; /* Add some padding */
                text-decoration: none; /* Remove underline from links */
            }

            .vertical-menu a:hover {
                background-color: #ccc; /* Dark grey background on mouse-over */
            }

            .vertical-menu a.active {
                background-color:#38a8f3; /* Add a green color to the "active/current" link */
                color: white;
            }
            
                
        </style>

    </head>


    <body>
        <hr>
        <div >
            
            <div  class = "container">
                <div class = "row">
                    <div class = "col-sm-2">
                        <a href = "/post/<%=club._id%>" style = "text-decoration: none; color: #38a8f3;"><img src = "../public/img/back arrow.png" style = "width: 20px; object-fit: cover; "> Back to Profile</a>
                        <div class="vertical-menu" style = "margin-top: 5%;">
                            <a href="/clubSettings/<%=club._id%>" >Club Settings</a>
                            <a href="/clubprofilesettings/<%=club._id%>">Club Profile</a>
                            <a href="/clubMarkettingSettings/<%=club._id%>">Marketting Settings</a>
                            <a href="/clubAdminApplications/<%=club._id%>"  class="active">Administrators Applications</a>
                            <a href="/clubMemberApplicationDesign/<%= club._id %>">Design Online Application</a>
                            <a href="/<%=club._id%>/club-applications">Manage Member Application</a>
                            <a href="/<%=club._id%>/manage-members">Manage Current Members</a>
                          </div>
                    </div>
                    <div class = "col-sm-6" >
                        <% club.admin_applications.forEach(applicant => { %>
                        <div class="card" style="width: 18rem; margin-left:10%">
                            <div class="card-body">
                              <h5 class="card-title"><%=applicant.name%></h5>
                              <h6 class="card-subtitle mb-2 text-muted"><%=applicant.major%></h6>
                              <p class="card-text"><%=applicant.email%></p>
                              <div class="form-group">
                                <label for="exampleSelect1"></label> 
                                
                                <form action = "/submitadminapplication/<%=applicant.id%>/<%=club._id%>" method ="POST">
                                    <select class="form-control" id="exampleSelect1" name = "applicationdecision">
                                        <option>Accept</option>
                                        <option>Reject</option>
                                    
                                    </select>
                                    <button  type="submit" class="btn btn-outline-secondary" style = "margin-top: 1%; width: 50%">Submit</button>
                                </form>
                              </div>
                            </div>
                          </div>
                        <% }) %>
                    </div>
                    <div class = "col">
                        <h3><u>Current Administrators</u></h3>
                        <% club.adminstrators.forEach(admin => { %>
                            <h5><%= admin.name  %> </h5>
                        <% }) %>
                    </div>
                </div>
                        

                    <br>
                    <br>
            </div>
        </div>
             






    </body>






</html>
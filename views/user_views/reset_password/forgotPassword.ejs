        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <title>ClubArchive</title>
        <style>
            .btn-outline-secondary:hover {
                background-color: lightgray
            }
            .SmallSignUp {
                color: blue;
                font-size: 100%;
                margin-left : 70%;
            }
            .SmallSignUp:visited {
                color:blue;
            }
            .form-control, .form-control-lg {
                width :30%; height : 50%; margin-left : 33%; margin-top : 5%; margin-right : 1%
            }
            .btn, .btn-outline-secondary {
                margin-left: 33%; margin-top: 3%; width : 30%; height: 5%; font-size: 90vw 90vh;
            }
                
            @media only screen and (max-width: 600px) {
                .form-control, .form-control-lg {
                    width :50%; height : 35px; margin-left : 24%; margin-top: 10%
                }
                .form-control::placeholder {
                    font-size: 70%;
                }
                .SmallSignUp {
                    font-size: 70%;
                    margin-left: 32%;
                    margin-top: 20%
                }
                .earth {
                    float:right; width: 15%; height : 15%; margin-top: 35%; margin-right:20%;
                    display: none;
                }
                .btn, .btn-outline-secondary {
                    margin-left: 33%; margin-top: 3%; width : 30%; height: 5%; font-size: 90vw 90vh;
                }
            
            }
            @media only screen and (min-width: 600px) {
                .SmallSignUp {
                    margin-left:38%;
                }
            }

            /* Medium devices (landscape tablets, 768px and up) */
            @media only screen and (min-width: 768px) {
                .SmallSignUp {
                    margin-left:23.5%;
                }
            }

            /* Large devices (laptops/desktops, 992px and up) */
            @media only screen and (min-width: 992px) {
                .SmallSignUp {
                    margin-left:32%;
                }
            }

            /* Extra large devices (large laptops and desktops, 1200px and up) */
            @media only screen and (min-width: 1200px) {
                .SmallSignUp {
                    margin-left: 54%
                }
            }   
        </style>

    </head>


    <body>

        <nav class="navbar navbar-expand-sm navbar-light" style = "background-color:#38a8f3 ;">
           
                    <a href = "/" style = " margin-left: 45%;"><img src = "../public/img/finalLogo2.png" style="width :100px; height:100px;" ></a>
                
            
        </nav>

        <div style = "margin-top : 6%">            
            <% if (error != null) {%>
                <div class=" alert alert info" style = "margin-left:33%">
                     <span class="closebtn">&times;</span>  
                     <strong>Error : </strong> <br> <%= error %> 
                 </div>
             <% } %>

            <form action ="/forgotpassword" method="POST">
                <input placeholder="Email" type="email" name = "email" class="form-control form-control-lg" >
                <button  type="submit" name = "submit" class="btn btn-outline-secondary">Submit</button>
            </form>
        </div>

            <script>
                var close = document.getElementsByClassName("closebtn");
                var i;
                
                for (i = 0; i < close.length; i++) {
                  close[i].onclick = function(){
                    var div = this.parentElement;
                    div.style.opacity = "0";
                    setTimeout(function(){ div.style.display = "none"; }, 600);
                  }
                }
            </script>
            
             

        
        



    </body>






</html>
